<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AssombracaoDetalheActivity"
    android:background="@color/bgGrey">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNomeDetalhe"
                android:text="Nome"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12pt"/>
            <TextView
                android:id="@+id/tvLocalDetalhe"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11pt"
                android:text="Local"/>

            <TextView
                android:id="@+id/tvEpocaDetalhe"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11pt"
                android:text="Época"/>
        </LinearLayout>


    </LinearLayout>



    <TextView
        android:layout_weight="1"
        android:id="@+id/tvDescDetalhe"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:text="Descrição Descrição Descrição Descrição DescriçãoDescrição DescriçãoDescriçãoDescrição"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnEncontreiDetalhe"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Encontrei!"/>

        <Button
            android:id="@+id/btnVerNoMapa"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Como chegar"/>



    </LinearLayout>

</LinearLayout>